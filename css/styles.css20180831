	position:fixed;
	bottom:20px;
	right:20px;
}

th.actions{
	width:75px;
}

.card-action a {
  color: white !important;
  text-decoration: none; /* no underline */
}

a.material-icons {
  color: black !important;
}
body.dashboard div.card{
	text-align:center;
    display: flex;
    min-height: 100vh;
    flex-direction: column;
}

#entete{
	width:50%;
}	

td, th {
  font-size: 14px;
  padding: 5px;
}

.btn-toolbar.bottom {
